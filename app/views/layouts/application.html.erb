<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>IntFocus / <%= request.url %></title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    <!--<link href="../bootstrap.css" rel="stylesheet">-->
    
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <style type="text/css">
      /* Override some defaults */
      html, body {
        background-color: #C0DEED;
        background-image: url(/imgs/bg.png);
        background-position: left 40px;
        background-attachment: fixed;
        background-repeat: no-repeat;
        color: #333;
      }
      body {
        padding-top: 45px; /* 40px to make the container go all the way to the bottom of the topbar */
      }
      .container > footer p {
        text-align: center; /* center align it with the container */
      }
      /* The white background content wrapper */
      .container > .content {
        background: rgba(218, 236, 244, 0.9);
        padding: 0 20px 0 20px;
        margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
        -webkit-border-radius: 5px 5px 6px 6px;
           -moz-border-radius: 5px 5px 6px 6px;
                border-radius: 5px 5px 6px 6px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.5);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.5);
                box-shadow: 0 1px 2px rgba(0,0,0,.5);
      }

      /* Page header tweaks */
      .page-header {
        background: whiteSmoke;
        border-radius: 5px 5px 0 0;
        -moz-border-radius: 5px 5px 0 0;
        -webkit-border-top-left-radius: 5px;
        -webkit-border-top-right-radius: 5px;
        padding: 15px 20px 0 20px;
        position: relative;
        z-index: 2;
        zoom: 1;
        border-top-left-radius: 5px 5px;
        border-top-right-radius: 5px 5px;
      }
      .stream-content{
        padding: 0 15px 0 20px;
        position: relative;
        z-index:3;
      }

      .topbar .btn {
        border: 0;
      }

    </style>

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="/imgs/favicon.ico">
    <link rel="apple-touch-icon" href="/imgs/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/imgs/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/imgs/apple-touch-icon-114x114.png">
  </head>
  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div id="doc">
    <div class="topbar" data-dropdown="dropdown">
      <div class="fill">
     <div class="fix-bar">
        <div class="container">
          <a class="brand" href="#">胜因营销</a>
          <ul class="nav">
            <li class="active"><a href="#">首页</a></li>
            <li class="menu">
               <a href="#" class="menu">Dropdown 1</a>
               <ul class="menu-dropdown">
                  <li><a href="#">Secondary link</a></li>
                  <li><a href="#">Something else here</a></li>
                  <li class="divider"></li>
                  <li><a href="#">Another link</a></li>
                </ul>
              </li>
              <li class="menu">
                 <a href="#" class="menu">Dropdown 2</a>
                 <ul class="menu-dropdown">
                    <li><a href="#">Secondary link</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Another link</a></li>
                  </ul>
               </li>
          </ul>
          <form action="/users/sign_in" class="pull-right">
            <% if user_signed_in? %>    
			    当前用户 <%= current_user.email %>.     
			    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>    
			  <% else %>    
			    <%= link_to "Sign up", new_user_registration_path %> 或    

            <button class="btn" type="submit">登录</button>
			  <% end %>    
          </form>
        </div>
      </div>
      </div>
    </div>

    
    <div class="fix-bar">
    <div class="container">
      <div class="content">
      
        <%= yield %>
      </div>
      <footer>
        <p>&copy; Company 2011</p>
      </footer>

    </div> <!-- /container -->
   </div>
  </div>
  
  </body>
</html>