<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>IntFocus / <%= request.url %></title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    <!--<link href="../bootstrap.css" rel="stylesheet">-->
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <style type="text/css">
      /* Override some defaults */
      html, body {
        background-color: #C0DEED;
        background-image: url(/imgs/bg.png);
        background-position: left 40px;
        background-attachment: fixed;
        background-repeat: no-repeat;
        color: #333;
      }
      body {
        padding-top: 50px; /* 40px to make the container go all the way to the bottom of the topbar */
      }
      .container > footer p {
        text-align: center; /* center align it with the container */
      }
      /* The white background content wrapper */
      .container > .content {
        background: rgba(218, 236, 244, 0.9);
        padding: 0 20px 0 20px;
        margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
        -webkit-border-radius: 5px 5px 6px 6px;
           -moz-border-radius: 5px 5px 6px 6px;
                border-radius: 5px 5px 6px 6px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.5);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.5);
                box-shadow: 0 1px 2px rgba(0,0,0,.5);
      }


      .topbar .btn {
        border: 0;
      }

    </style>

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="/imgs/favicon.ico">
    <link rel="apple-touch-icon" href="/imgs/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/imgs/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/imgs/apple-touch-icon-114x114.png">
  </head>
  <body>
            <p class="notice"></p>
  	  	<% if notice != nil or alert != nil %>  
  	  	<div class="alert-message warning fade in" data-alert="alert">
            <a class="close" href="#">x</a>
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
        </div>
        <% end %> 
  <div id="doc">
    <div class="topbar" data-dropdown="dropdown">
      <div class="fill">
     <div class="fix-bar">
        <div class="container">
          <a class="brand" href="#">胜因营销</a>
          <ul class="nav">
            <li class="active"><a href="/reports/dashboard">首页</a></li>
            <li><a href="/timeline">测试页</a></li>
            <li class="menu">
               <a href="#" class="menu">微博管理</a>
               <ul class="menu-dropdown">
                  <li><a href="/messages/select_message">微博搜索</a></li>
                  <li><a href="/messages/upload_message">微博发布</a></li>
                  <li class="divider"></li>
                  <li><a href="/messages/display_message">微博监控</a></li>
                </ul>
              </li>
              <li class="menu">
                 <a href="#" class="menu">Dropdown 2</a>
                 <ul class="menu-dropdown">
                    <li><a href="#">Secondary link</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Another link</a></li>
                  </ul>
               </li>
          </ul>
          <form action="/users/sign_in" class="pull-right">
           <p style="color: white;">
            <% if user_signed_in? %>    
			    当前用户 <%= current_user.email %>    
			    <%= link_to "登出", destroy_user_session_path, :method => :delete %>    
			  <% else %>    
			    <%= link_to "注册", new_user_registration_path %> 或    

            <%= link_to "登入", new_user_session_path %>
			  <% end %>     </p>
          </form>
        </div>
      </div>
      </div>
    </div>

    
    <div class="fix-bar">
    <div class="container">
      <div class="content">
            <div id="loading" class="loadingtxt" style="display: none;">加载中……</div>
        <%= yield %>
      </div>
      <footer>
        <p>&copy; Company 2011</p>
      </footer>

    </div> <!-- /container -->
   </div>
  </div>
  
  </body>
</html>